#!/bin/bash

# This script will list all the files in the directory pointed out by the 
# RC_BIN env variable.
#
# I.e. using this script from rcon will list available commands

grep "&ZON&" $RC_DATA/$1 | \
	grep "You have entered" | \
	tail -n 1 | \
	sed -e 's/@.*You have entered/: /' | \
	sed -e 's/].*$//'

